services:
    dev:
        build:
            context: ./vendor/reedware/sail-lite/runtimes/{{PHP_VERSION}}
            dockerfile: ./vendor/reedware/sail-lite/runtimes/{{PHP_VERSION}}/Dockerfile
            args:
                WWWGROUP: '${WWWGROUP}'
        image: sail-{{PHP_VERSION}}/dev
        environment:
            WWWUSER: '${WWWUSER}'
        volumes:
            - '.:/var/www/html'
